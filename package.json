{
  "name": "lbenicio.github.io",
  "version": "1.5.0",
  "description": "A minimal website/blog theme for developers. It is a simple and clean theme for developers who want to showcase their work and write about their experiences.",
  "scripts": {
    "start:dev": "hugo server --source src --destination $PWD/.build/public --cacheDir $PWD/.build/cache --noBuildLock --buildDrafts --buildFuture --buildExpired",
    "build:hugo": "hugo --source src --minify --cacheDir $PWD/.build/cache --noBuildLock --destination $PWD/.build/public",
    "build:obfuscate": "node scripts/obfuscate.js ./public --verbose --assets",
    "build:prod": "npm run build:hugo && npm run build:obfuscate",
    "build:preview": "node scripts/preview-server.js --port 1313",
    "clear:build:cache": "rm -rf resources && rm -rf .hugo_build.lock && rm -rf ./public",
    "test:obfuscate": "node test/test-obfuscate.js",
    "test:static": "node test/test-static.js"
  },
  "author": "Leonardo Benicio",
  "license": "GPLv3",
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "postcss-selector-parser": "^7.0.2",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "jsdom": "^22.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lbenicio/lbenicio.github.io"
  },
  "keywords": [
    "hugo",
    "theme",
    "blog",
    "developer",
    "minimalist",
    "simple",
    "clean",
    "responsive",
    "tailwindcss"
  ]
}
