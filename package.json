{
  "name": "lbenicio.github.io",
  "version": "1.5.3",
  "description": "A minimal website/blog theme for developers. It is a simple and clean theme for developers who want to showcase their work and write about their experiences.",
  "scripts": {
    "start": "npm run start:dev",
    "test": "npm run test:unit",
    "start:dev": "hugo server --source src --destination $PWD/.build/public --cacheDir $PWD/.build/cache --noBuildLock --buildDrafts --buildFuture --buildExpired --environment development",
    "build:hugo": "hugo --source src --minify --cacheDir $PWD/.build/cache --noBuildLock --destination $PWD/.build/public --environment production",
    "build:obfuscate": "node scripts/obfuscate.js $PWD/.build/public --verbose --assets",
    "build:prod": "npm run build:hugo && npm run build:obfuscate",
    "build:preview": "node scripts/preview-server.js --port 1313",
    "clear:build:cache": "rm -rf resources && rm -rf .hugo_build.lock && rm -rf ./public",
    "test:obfuscate": "node test/obfuscate.test.js",
    "test:static": "node test/static.test.js",
    "test:unit": "npm run test:obfuscate && npm run test:static",
    "update:theme": "cd src/themes/minimalist-simple-dev-theme && git stash && git pull --rebase -X theirs",
    "wiki:publish": "node scripts/publish-wiki.js --verbose --docs docs --branch master"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-selector-parser": "^7.1.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "jsdom": "^22.1.0",
    "minimist": "^1.2.8"
  },
  "author": {
    "name": "Leonardo Benicio",
    "email": "hi@lbenicio.dev"
  },
  "license": "GPLv3",
  "repository": {
    "type": "git",
    "url": "https://github.com/lbenicio/lbenicio.github.io"
  },
  "bugs": {
    "url": "https://github.com/lbenicio/lbenicio.github.io/issues"
  },
  "keywords": [
    "hugo",
    "theme",
    "blog",
    "developer",
    "minimalist",
    "simple",
    "clean",
    "responsive",
    "tailwindcss"
  ]
}
